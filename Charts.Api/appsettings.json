{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Charts.Api": "Debug",
      "Charts.Api.Infrastructure.Services.Test.PostgresWhereCompiler": "Debug",
      "Charts.Api.Infrastructure.Services.Test.PostgresSqlRequestFactory": "Debug",
      "Charts.Api.Infrastructure.Services.Test.PostgresRawDataExecutor": "Debug",
      "Charts.Api.Infrastructure.Services.Test.ChartDataService": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "https://localhost:5173",
      "https://localhost:5174",
      "https://localhost:7001"
    ]
  },

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5434;Database=charts_api;Username=postgres;Password=postgres;"
  },

  "MetaDb": {
    "AutoMigrate": true,
    "RecreateOnStartup": false,
    "FailOnConnectionError": true,
    "RetryAttempts": 10,
    "RunSeeders": true,
    "FailOnSeederError": false
  },

  "Charts": {
    "AssumeTimeZone": "Europe/Moskow",

    "ChartBucketing": {
      "TargetPointsPerPx": 0.05,
      "MinTargetPoints": 20,
      "EnableWeeklyMultiples": false,
      "MaxWeeksMultiple": 52,
      "NiceMilliseconds": [
        1000, // 1 секунда
        2000, // 2 секунды
        5000, // 5 секунд
        10000, // 10 секунд0
        15000, // 15 секунд
        20000, // 20 секунд
        30000, // 30 секунд
        60000, // 1 минута
        120000, // 2 минуты
        300000, // 5 минут
        600000, // 10 минут
        900000, // 15 минут
        1800000, // 30 минут
        3600000, // 1 час
        7200000, // 2 часа
        10800000, // 3 часа
        21600000, // 6 часов
        43200000, // 12 часов
        86400000, // 1 день
        172800000, // 2 дня
        604800000, // 7 дней (1 неделя)
        2592000000, // 30 дней (~1 месяц)
        7776000000, // 90 дней (~3 месяца)
        15552000000, // 180 дней (~6 месяцев)
        31536000000, // 365 дней (1 год)
        63072000000, // 2 года
        157680000000 // 5 лет
      ]
    }

    // "Data": {}
  }
}